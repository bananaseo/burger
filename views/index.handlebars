<h1>Up-N-Down Burgers</h1>



<div id="wrapper">
  <div id="c1">
  <h2>Ready-made</h2>
    <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block eaten=true}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div id="c2">
  <h2>Devoured!</h2>
  <ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block eaten=false}}
    {{/if}}
  {{/each}}
  </ul>
</div>
</div>

<div id="c3">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="burger_name">
    </div>

  <button type="submit">Add burger</button>
  </form>
</div>


